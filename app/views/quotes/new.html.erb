<h1>Enter Your Quote Details</h1>

<%= simple_form_for @quote do |f| %>
  <%= f.input :saying, :input_html => { :class => 'field', :size => 50} %>
  <%= f.input :author, :input_html => { :class => 'field', :size => 50} %>
  <br class="clear" />
  <%= f.submit 'Create', :class => 'btn btn-danger' %>
<% end %>